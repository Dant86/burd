<head>
	<link href="https://fonts.googleapis.com/css?family=Raleway" rel="stylesheet">
	<link rel="stylesheet" type="text/css" href="../styles/user.css">
	<link rel="stylesheet" type="text/css" href="../styles/posts.css">
	<link rel="stylesheet" type="text/css" href="../styles/sidebar.css">
	<script src="https://ajax.googleapis.com/ajax/libs/jquery/2.2.4/jquery.min.js"></script>
	<script src="../sidebar.js"></script>
</head>

<div id="sidebar">
	<ul>
		<li>
			<a href="/posts/new">
				<button type="button">
					Create a post
				</button>
			</a>
		</li>
		<li>
			<a href="/users/<%=session[:user_id]%>">
				<button type="button">
					See your posts
				</button>
			</a>
		</li>
		<li>
			<a href="/posts">
				<button type="button">
					See all posts
				</button>
			</a>
		</li>
		<li>
			<form method="post" action="/users/<%=session[:user_id]%>">
				<input type="hidden" name="_method" value="delete">
				<input type="submit" value="logout">
			</form>
		</li>
	</ul>
	<div id="sidebar-btn">
		<span></span>
		<span></span>
		<span></span>
	</div>
</div>
<header>
	<div id="logo_img">
		<img src="../images/dove.png">
	</div>
</header>

<h1><%=@user.username%>'s posts</h1>

<%@posts.each do |post|%>
	<div class="post">
		<div id="top_of_post">
			<a href="/users/<%=post.user_id%>">
				<p><%=User.find(post.user_id).username%></p>
			</a>
		</div>
		<%if post.post_img_url%>
			<div id="img_body">
				<img src=<%=post.post_img_url%>>
			</div>
		<%end%>
		<div id="post_body">
			<p><%=post.post_body%></p>
		</div>
		<p><%=post.likes.count%> likes, <%=post.comments.count%> comments</p>
		<a href="/posts/<%=post.id%>">
			<button type="button">
				View Post
			</button>
		</a>
		<%if post.user_id == session[:user_id]%>
			<a href="/posts/<%=post.id%>/edit">
				<button type="button">
					Edit Post
				</button>
			</a>
		<%end%>
	</div>
<%end%>




